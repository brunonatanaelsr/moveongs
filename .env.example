NODE_ENV=development
HOST=0.0.0.0
PORT=3333
DATABASE_URL=postgres://imm:imm@localhost:5432/imm
JWT_SECRET=please-change-me-and-use-32chars-minimum
JWT_EXPIRES_IN=1d
LOG_LEVEL=info

OTEL_ENABLED=false
OTEL_SERVICE_NAME=moveongs-api
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_METRICS_EXPORT_INTERVAL_MS=60000
OTEL_METRICS_EXPORT_TIMEOUT_MS=30000
OTEL_TRACES_SAMPLER=parentbased_always_on
OTEL_TRACES_SAMPLER_ARG=

REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300
SEED_DEMO_DATA=false

# Notificações externas
NOTIFICATIONS_EMAIL_FROM=alerts@imm.local
# Lista separada por vírgula
NOTIFICATIONS_EMAIL_RECIPIENTS=alerts@example.com
# Números com código do país, separados por vírgula
NOTIFICATIONS_WHATSAPP_NUMBERS=+5511999999999
NOTIFICATIONS_WEBHOOK_TIMEOUT_MS=5000
# Secret global usada para assinar webhooks (pode ser sobrescrito por webhook)
NOTIFICATIONS_WEBHOOK_SECRET=change-me

# Cofre de segredos (arquivo JSON/.env lido no bootstrap)
SECRET_VAULT_PATH=./secrets/vault.env

# Criptografia de PII/PHI
PII_ENCRYPTION_KEY=
PII_ENCRYPTION_KMS_KEY_ID=alias/moveongs-staging-app
PII_ENCRYPTION_CACHE_TTL_SECONDS=300
AUDIT_LOG_SIGNING_KEY=

# Armazenamento seguro de anexos
ATTACHMENTS_STORAGE=filesystem
ATTACHMENT_ALLOWED_MIME_TYPES=
ATTACHMENT_MAX_SIZE_BYTES=10485760
ANTIVIRUS_HOST=clamav
ANTIVIRUS_PORT=8080
ANTIVIRUS_PROTOCOL=http
ANTIVIRUS_SCAN_PATH=/scan
ANTIVIRUS_TIMEOUT_MS=10000
ANTIVIRUS_API_KEY=
S3_BUCKET=
S3_REGION=us-east-1
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=false
S3_SERVER_SIDE_ENCRYPTION=aws:kms

# Antivirus / ClamAV service
ANTIVIRUS_HOST=
ANTIVIRUS_PORT=3310
ANTIVIRUS_TLS=false
ANTIVIRUS_PATH=/scan
ANTIVIRUS_API_KEY=
ANTIVIRUS_TIMEOUT_MS=10000
ANTIVIRUS_ALLOW_ON_ERROR=false
